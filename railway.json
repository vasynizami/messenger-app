{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "ng build"
  },
  "deploy": {
    "startCommand": "npx http-server dist/messenger-app/browser -p $PORT -a 0.0.0.0 -c-1",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100
  }
}
